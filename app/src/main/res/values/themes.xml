<resources>
    <!--    Splash theme    -->
    <style name="Theme.PressOneMillionTimes.SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <!--    Set splash    -->
        <item name="android:windowBackground">@xml/splash</item>

        <!--    Theme colors    -->
        <item name="colorAccent">@color/on_primary</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/background</item>

        <!--    Hide action bar    -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--    Base application theme    -->
    <style name="Theme.PressOneMillionTimes" parent="Theme.AppCompat.NoActionBar">

        <!--    App Theme   -->
        <item name="colorAccent">@color/on_primary</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/background</item>
    </style>

    <!--    DialogFragment Animation    -->
    <style name="Theme.PressOneMillionTimes.Animation">
        <item name="android:windowEnterAnimation">@anim/breath_in</item>
        <item name="android:windowExitAnimation">@anim/breath_out</item>
    </style>
</resources>