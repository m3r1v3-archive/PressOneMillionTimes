<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/snow_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.jetradarmobile.snowfall.SnowfallView
            android:id="@+id/snow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:snowflakeAlphaMax="256"
            app:snowflakeAlphaMin="128"
            app:snowflakeAngleMax="5"
            app:snowflakeImage="@drawable/snowflake"
            app:snowflakeSizeMax="32sp"
            app:snowflakeSizeMin="8sp"
            app:snowflakeSpeedMax="8"
            app:snowflakeSpeedMin="2"
            app:snowflakesAlreadyFalling="false"
            app:snowflakesFadingEnabled="true"
            app:snowflakesNum="50" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/odibee"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/red"
        android:textSize="46sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/counter"
        android:layout_width="138sp"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:fontFamily="@font/odibee"
        android:gravity="center_horizontal|center_vertical"
        android:letterSpacing="0.1"
        android:paddingTop="2sp"
        android:paddingBottom="0sp"
        android:text="@string/counter_def_value"
        android:textColor="@color/dark"
        android:textSize="32sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25"
        tools:ignore="TextContrastCheck" />

    <ImageButton
        android:id="@+id/button"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:background="@drawable/button"
        android:contentDescription="@string/todo"
        android:onClick="clickButton"
        android:textAlignment="center"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <ImageView
        android:id="@+id/arrow_up"
        android:layout_width="48sp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@xml/arrow_up" />

    <View
        android:id="@+id/settings_pad"
        android:layout_width="match_parent"
        android:layout_height="400sp"
        android:background="@xml/settings_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <TextView
        android:id="@+id/settings_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:fontFamily="@font/odibee"
        android:text="@string/settings"
        android:gravity="center"
        android:textColor="@color/red"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="@id/settings_pad"
        app:layout_constraintTop_toTopOf="@id/settings_pad" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/vibration_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24sp"
        android:layout_marginTop="50sp"
        android:layout_marginRight="24sp"
        android:background="@xml/background"
        android:fontFamily="@font/odibee"
        android:onClick="clickVibration"
        android:padding="12sp"
        android:text="@string/vibration"
        android:textColor="@color/red"
        android:textSize="26sp"
        app:layout_constraintEnd_toStartOf="@id/settings_title"
        app:layout_constraintStart_toEndOf="@id/settings_pad"
        app:layout_constraintTop_toTopOf="@id/settings_title"
        app:thumbTint="#3c3c3c"
        app:trackTint="@color/red" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/notification_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24sp"
        android:layout_marginTop="70sp"
        android:layout_marginRight="24sp"
        android:background="@xml/background"
        android:fontFamily="@font/odibee"
        android:onClick="clickNotification"
        android:padding="12sp"
        android:text="@string/notification"
        android:textColor="@color/red"
        android:textSize="26sp"
        app:layout_constraintEnd_toStartOf="@id/vibration_switch"
        app:layout_constraintStart_toEndOf="@id/settings_pad"
        app:layout_constraintTop_toTopOf="@id/vibration_switch"
        app:thumbTint="#3c3c3c"
        app:trackTint="@color/red" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/acceleration_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24sp"
        android:layout_marginTop="70sp"
        android:layout_marginRight="24sp"
        android:background="@xml/background"
        android:fontFamily="@font/odibee"
        android:onClick="clickAcceleration"
        android:padding="12sp"
        android:text="@string/acceleration"
        android:textColor="@color/red"
        android:textSize="26sp"
        app:layout_constraintEnd_toStartOf="@id/notification_switch"
        app:layout_constraintStart_toEndOf="@id/settings_pad"
        app:layout_constraintTop_toTopOf="@id/notification_switch"
        app:thumbTint="#3c3c3c"
        app:trackTint="@color/red" />

    <Button
        android:id="@+id/options_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64sp"
        android:layout_marginTop="65sp"
        android:layout_marginRight="64sp"
        android:background="@xml/background"
        android:fontFamily="@font/odibee"
        android:onClick="clickOptions"
        android:padding="12sp"
        android:stateListAnimator="@null"
        android:text="@string/options"
        android:textColor="@color/red"
        android:textSize="26sp"
        app:layout_constraintEnd_toStartOf="@id/acceleration_switch"
        app:layout_constraintStart_toEndOf="@id/settings_pad"
        app:layout_constraintTop_toTopOf="@id/acceleration_switch" />

    <TextView
        android:id="@+id/info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:fontFamily="@font/odibee"
        android:padding="18sp"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textSize="26sp"
        app:layout_constraintEnd_toStartOf="@id/options_button"
        app:layout_constraintStart_toEndOf="@id/settings_pad"
        app:layout_constraintTop_toTopOf="@id/options_button" />

    <FrameLayout
        android:id="@+id/toast_fragment"
        android:layout_width="match_parent"
        android:layout_height="76sp"
        android:layout_marginLeft="4sp"
        android:layout_marginRight="4sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.motion.widget.MotionLayout>