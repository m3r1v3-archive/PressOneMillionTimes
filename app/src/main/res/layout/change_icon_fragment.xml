<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/change_icon_layout"
    android:layout_width="364sp"
    android:layout_height="276sp"
    android:layout_gravity="center"
    android:background="@xml/background"
    android:minWidth="364sp"
    android:minHeight="276sp"
    android:visibility="visible"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.49"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="1.0">

    <TextView
        android:id="@+id/change_icon_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:fontFamily="@font/odibee"
        android:text="@string/icons"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/red"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/change_icon_title_separator"
        android:layout_width="0sp"
        android:layout_height="12sp"
        android:layout_marginLeft="36sp"
        android:layout_marginRight="36sp"
        android:layout_marginBottom="12sp"
        android:src="@xml/line"
        app:layout_constraintBottom_toTopOf="@+id/short_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/default_icon"
        android:layout_width="wrap_content"
        android:layout_height="172sp"
        android:layout_marginTop="28dp"
        android:background="@xml/background"
        android:padding="12sp"
        app:layout_constraintEnd_toStartOf="@+id/short_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_icon_title">

        <ImageView
            android:id="@+id/default_icon_button"
            android:layout_width="76sp"
            android:layout_height="76sp"
            android:layout_marginTop="8sp"
            android:background="@xml/background"
            android:contentDescription="@string/todo"
            android:padding="8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon" />

        <ImageView
            android:id="@+id/change_icon_default_separator"
            android:layout_width="0sp"
            android:layout_height="12sp"
            android:layout_marginBottom="8sp"
            android:src="@xml/line"
            app:layout_constraintBottom_toTopOf="@+id/default_icon_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/default_icon_text"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28sp"
            android:fontFamily="@font/odibee"
            android:text="@string/default_icon"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/default_icon_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/short_icon"
        android:layout_width="wrap_content"
        android:layout_height="172sp"
        android:layout_marginTop="28dp"
        android:background="@xml/background"
        android:padding="12sp"
        app:layout_constraintEnd_toStartOf="@+id/classic_icon"
        app:layout_constraintStart_toEndOf="@+id/default_icon"
        app:layout_constraintTop_toBottomOf="@+id/change_icon_title">

        <ImageView
            android:id="@+id/short_icon_button"
            android:layout_width="76sp"
            android:layout_height="76sp"
            android:layout_marginTop="8sp"
            android:background="@xml/background"
            android:contentDescription="@string/todo"
            android:padding="8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/short_icon" />

        <ImageView
            android:id="@+id/change_icon_short_separator"
            android:layout_width="0sp"
            android:layout_height="12sp"
            android:layout_marginBottom="8sp"
            android:src="@xml/line"
            app:layout_constraintBottom_toTopOf="@+id/short_icon_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/short_icon_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28sp"
            android:fontFamily="@font/odibee"
            android:text="@string/p1mt_icon"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/short_icon_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/classic_icon"
        android:layout_width="wrap_content"
        android:layout_height="172sp"
        android:layout_marginTop="28dp"
        android:background="@xml/background"
        android:padding="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/short_icon"
        app:layout_constraintTop_toBottomOf="@+id/change_icon_title">

        <ImageView
            android:id="@+id/classic_icon_button"
            android:layout_width="76sp"
            android:layout_height="76sp"
            android:layout_marginTop="8sp"
            android:background="@xml/background"
            android:contentDescription="@string/todo"
            android:padding="8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/classic_icon" />

        <ImageView
            android:id="@+id/change_icon_classic_separator"
            android:layout_width="0sp"
            android:layout_height="12sp"
            android:layout_marginBottom="8sp"
            android:src="@xml/line"
            app:layout_constraintBottom_toTopOf="@+id/classic_icon_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/classic_icon_text"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28sp"
            android:fontFamily="@font/odibee"
            android:text="@string/classic_icon"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/classic_icon_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>