<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_icons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_24dp"
    android:paddingBottom="@dimen/padding_24dp">

    <TextView
        android:id="@+id/icons_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/odibee"
        android:gravity="center"
        android:text="@string/icons"
        android:textAllCaps="true"
        android:textColor="@color/red"
        android:textSize="@dimen/font_medium_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icons_title_separator"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="@dimen/size_12dp"
        android:layout_marginLeft="@dimen/margin_36dp"
        android:layout_marginRight="@dimen/margin_36dp"
        android:layout_marginBottom="@dimen/margin_12dp"
        android:src="@xml/horizontal_line"
        app:layout_constraintBottom_toTopOf="@+id/short_icon_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/default_icon_button"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:background="@xml/background"
        android:padding="@dimen/padding_8dp"
        app:layout_constraintEnd_toStartOf="@+id/short_icon_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icons_title">

        <ImageView
            android:id="@+id/default_icon"
            android:layout_width="@dimen/size_72dp"
            android:layout_height="@dimen/size_72dp"
            android:layout_marginTop="@dimen/margin_6dp"
            android:background="@xml/background"
            android:contentDescription="@string/todo"
            android:padding="@dimen/padding_8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_icon" />

        <ImageView
            android:id="@+id/default_icon_separator"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="@dimen/size_12dp"
            android:layout_marginBottom="@dimen/margin_6dp"
            android:src="@xml/horizontal_line"
            app:layout_constraintBottom_toTopOf="@+id/default_icon_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/default_icon_text"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_24dp"
            android:fontFamily="@font/odibee"
            android:gravity="center"
            android:text="@string/default_icon"
            android:textColor="@color/red"
            android:textSize="@dimen/font_small_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/default_icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/short_icon_button"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_12dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginEnd="@dimen/margin_12dp"
        android:background="@xml/background"
        android:padding="@dimen/padding_8dp"
        app:layout_constraintEnd_toStartOf="@+id/million_icon_button"
        app:layout_constraintStart_toEndOf="@+id/default_icon_button"
        app:layout_constraintTop_toBottomOf="@+id/icons_title">

        <ImageView
            android:id="@+id/short_icon"
            android:layout_width="@dimen/size_72dp"
            android:layout_height="@dimen/size_72dp"
            android:layout_marginTop="@dimen/margin_6dp"
            android:background="@xml/background"
            android:contentDescription="@string/todo"
            android:padding="@dimen/padding_8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_short_icon" />

        <ImageView
            android:id="@+id/short_icon_separator"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="@dimen/size_12dp"
            android:layout_marginBottom="@dimen/margin_6dp"
            android:src="@xml/horizontal_line"
            app:layout_constraintBottom_toTopOf="@+id/short_icon_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/short_icon_text"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_24dp"
            android:fontFamily="@font/odibee"
            android:gravity="center"
            android:text="@string/short_icon"
            android:textColor="@color/red"
            android:textSize="@dimen/font_small_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/short_icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/million_icon_button"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:background="@xml/background"
        android:padding="@dimen/padding_8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/short_icon_button"
        app:layout_constraintTop_toBottomOf="@+id/icons_title">

        <ImageView
            android:id="@+id/million_icon"
            android:layout_width="@dimen/size_72dp"
            android:layout_height="@dimen/size_72dp"
            android:layout_marginTop="@dimen/margin_6dp"
            android:background="@xml/background"
            android:contentDescription="@string/todo"
            android:padding="@dimen/padding_8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_million_icon" />

        <ImageView
            android:id="@+id/million_icon_separator"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="@dimen/size_12dp"
            android:layout_marginBottom="@dimen/margin_6dp"
            android:src="@xml/horizontal_line"
            app:layout_constraintBottom_toTopOf="@+id/million_icon_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/million_icon_text"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_24dp"
            android:fontFamily="@font/odibee"
            android:gravity="center"
            android:text="@string/million_icon"
            android:textColor="@color/red"
            android:textSize="@dimen/font_small_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/million_icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/icons_cancel_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_56dp"
        android:layout_marginStart="@dimen/margin_48dp"
        android:layout_marginTop="@dimen/margin_12dp"
        android:layout_marginEnd="@dimen/margin_48dp"
        android:background="@xml/background"
        android:fontFamily="@font/odibee"
        android:gravity="center_vertical|center_horizontal"
        android:singleLine="true"
        android:stateListAnimator="@null"
        android:text="@string/cancel"
        android:textAllCaps="false"
        android:textColor="@color/red"
        android:textSize="@dimen/font_small_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/short_icon_button" />

    <ImageView
        android:id="@+id/icons_cancel_button_separator"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="@dimen/size_12dp"
        android:layout_marginLeft="@dimen/margin_36dp"
        android:layout_marginTop="@dimen/margin_12dp"
        android:layout_marginRight="@dimen/margin_36dp"
        android:src="@xml/horizontal_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icons_cancel_button" />

</androidx.constraintlayout.widget.ConstraintLayout>