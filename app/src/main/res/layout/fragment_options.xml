<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_options"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="18sp"
    android:paddingBottom="12sp">

    <TextView
        android:id="@+id/options_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/odibee"
        android:gravity="center"
        android:text="@string/options"
        android:textAllCaps="true"
        android:textColor="@color/red"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/options_title_separator"
        android:layout_width="0sp"
        android:layout_height="12sp"
        android:layout_marginLeft="36sp"
        android:layout_marginRight="36sp"
        android:layout_marginBottom="12sp"
        android:src="@xml/line"
        app:layout_constraintBottom_toTopOf="@+id/reset_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/reset_button"
        android:layout_width="0sp"
        android:layout_height="56sp"
        android:layout_marginStart="16sp"
        android:layout_marginTop="28sp"
        android:layout_marginEnd="8sp"
        android:background="@xml/background"
        android:fontFamily="@font/odibee"
        android:gravity="center_vertical|center_horizontal"
        android:padding="12sp"
        android:stateListAnimator="@null"
        android:text="@string/reset"
        android:textAllCaps="false"
        android:textColor="@color/red"
        android:textSize="26sp"
        app:layout_constraintEnd_toStartOf="@+id/score_share_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/options_title" />

    <Button
        android:id="@+id/score_share_button"
        android:layout_width="0sp"
        android:layout_height="56sp"
        android:layout_marginStart="8sp"
        android:layout_marginTop="28sp"
        android:layout_marginEnd="16sp"
        android:background="@xml/background"
        android:fontFamily="@font/odibee"
        android:gravity="center_vertical|center_horizontal"
        android:padding="12sp"
        android:stateListAnimator="@null"
        android:text="@string/scoreshare"
        android:textAllCaps="false"
        android:textColor="@color/red"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/reset_button"
        app:layout_constraintTop_toBottomOf="@+id/options_title" />

    <Button
        android:id="@+id/icons_button"
        android:layout_width="0sp"
        android:layout_height="56sp"
        android:layout_marginStart="16sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="8sp"
        android:background="@xml/background"
        android:fontFamily="@font/odibee"
        android:gravity="center_vertical|center_horizontal"
        android:padding="12sp"
        android:stateListAnimator="@null"
        android:text="@string/icons"
        android:textAllCaps="false"
        android:textColor="@color/red"
        android:textSize="26sp"
        app:layout_constraintEnd_toStartOf="@+id/splash_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset_button" />

    <Button
        android:id="@+id/splash_button"
        android:layout_width="0sp"
        android:layout_height="56sp"
        android:layout_marginStart="8sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="16sp"
        android:background="@xml/background"
        android:fontFamily="@font/odibee"
        android:gravity="center_vertical|center_horizontal"
        android:padding="12sp"
        android:singleLine="true"
        android:stateListAnimator="@null"
        android:text="@string/splash"
        android:textAllCaps="false"
        android:textColor="@color/red"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/icons_button"
        app:layout_constraintTop_toBottomOf="@+id/score_share_button" />

    <Button
        android:id="@+id/options_cancel_button"
        android:layout_width="match_parent"
        android:layout_height="56sp"
        android:layout_marginStart="64sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="64sp"
        android:background="@xml/background"
        android:fontFamily="@font/odibee"
        android:gravity="center_vertical|center_horizontal"
        android:singleLine="true"
        android:stateListAnimator="@null"
        android:text="@string/cancel"
        android:textAllCaps="false"
        android:textColor="@color/red"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splash_button" />

    <ImageView
        android:id="@+id/options_cancel_button_separator"
        android:layout_width="0sp"
        android:layout_height="12sp"
        android:layout_marginLeft="36sp"
        android:layout_marginTop="12sp"
        android:layout_marginRight="36sp"
        android:src="@xml/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/options_cancel_button" />

    <TextView
        android:id="@+id/options_tip_text"
        android:layout_width="match_parent"
        android:layout_height="56sp"
        android:layout_marginStart="16sp"
        android:layout_marginTop="28sp"
        android:layout_marginEnd="16sp"
        android:fontFamily="@font/odibee"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/options_tip"
        android:textColor="@color/red"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/options_cancel_button"
        app:layout_constraintVertical_bias="0.25" />

</androidx.constraintlayout.widget.ConstraintLayout>