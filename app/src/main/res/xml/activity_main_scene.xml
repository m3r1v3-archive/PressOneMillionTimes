<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@id/dial"
        motion:constraintSetStart="@id/base_state"
        motion:duration="3000">
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@id/settings_pad"
            motion:touchAnchorSide="top" />
    </Transition>

    <ConstraintSet android:id="@+id/base_state">
        <Constraint android:id="@id/settings_pad">
            <Layout
                android:layout_width="0sp"
                android:layout_height="384sp"
                android:layout_marginTop="0sp"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toBottomOf="parent" />
        </Constraint>

        <Constraint android:id="@id/arrow_up">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8sp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent" />
        </Constraint>
        <Constraint
            motion:layout_constraintEnd_toStartOf="parent"
            motion:layout_constraintStart_toEndOf="@id/settings_pad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="@id/settings_pad"
            android:layout_marginTop="16sp"
            android:id="@+id/settings_title"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/dial">

        <Constraint
            android:id="@id/settings_pad"
            android:layout_height="0sp">
            <Layout
                android:layout_width="0sp"
                android:layout_height="392sp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent" />
        </Constraint>

        <Constraint android:id="@id/arrow_up">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toBottomOf="parent" />
        </Constraint>
    </ConstraintSet>
</MotionScene>